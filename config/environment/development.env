# Development environment configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
MAIN_HOST_PORT=8000
ML_SERVICE_PORT=6000
ALERTMANAGER_PORT=9093

# Service URLs (internal network)
MAIN_HOST_URL=http://main_host:8000
ML_SERVICE_URL=http://ml_service:6000
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
ALERTMANAGER_URL=http://alertmanager:9093

# ML Service Configuration
ENABLE_ML_INFERENCE=true

# Public URLs (for web dashboard)
PUBLIC_PROMETHEUS_URL=http://localhost:9090
PUBLIC_GRAFANA_URL=http://localhost:3001
PUBLIC_ALERTMANAGER_URL=http://localhost:9093

# Admin credentials (CHANGE THESE IN PRODUCTION)
GRAFANA_ADMIN_PASSWORD=admin

# Email configuration
ALERT_EMAIL_TO=kmohnishm@gmail.com
ALERT_EMAIL_FROM=kmohnishm@gmail.com
SMTP_HOST=smtp.gmail.com:587

# Log level
LOG_LEVEL=debug

# =============================================================================
# SECURITY CONFIGURATION (Phase 1 & 2 - Added)
# =============================================================================

# MQTT Configuration
MQTT_BROKER=mosquitto
MQTT_PORT_TLS=8883
MQTT_PORT_PLAIN=1883
USE_TLS=true

# Service Authentication (Phase 3)
SERVICE_SECRET_KEY=dev-secret-please-change-in-production-12345678
JWT_EXPIRY_HOURS=24

# Database Encryption (Phase 4)
DB_ENCRYPTION_KEY=dev-db-key-change-in-production

# JWT Service Authentication (Phase 4)
JWT_SECRET_KEY=dev-jwt-secret-change-in-production-use-256-bit-key

# Startup configuration
STARTUP_DELAY=10

# Security Features
ENABLE_ENCRYPTION=true
ENABLE_SERVICE_AUTH=true
ENABLE_DB_ENCRYPTION=true
REQUIRE_MUTUAL_TLS=false

# Development flags
ALLOW_PLAIN_FALLBACK=true
AUTO_PROVISION_KEYS=true
